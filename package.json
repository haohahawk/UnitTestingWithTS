{
  "name": "unit-testing-with-ts",
  "version": "0.0.0",
  "description": "TS practice example of the book \"The Art of Unit Testing\"",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "node ./dist/server.js",
    "prod": "npm run build && npm start",
    "test": "jest --watchAll --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haohahawk/UnitTestingWithTS.git"
  },
  "author": "hao haha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/haohahawk/UnitTestingWithTS/issues"
  },
  "homepage": "https://github.com/haohahawk/UnitTestingWithTS#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ],
    "exec": "ts-node ./src/server.ts",
    "delay": "2500"
  }
}
